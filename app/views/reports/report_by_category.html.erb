<h1>Report by category</h1>

<table>
  <thead>
    <tr>
      <th>Category Name</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.calculate_amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
