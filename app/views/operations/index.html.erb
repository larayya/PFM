<p style="color: green"><%= notice %></p>

<h1>Operations</h1>
<%= link_to "New operation", new_operation_path, class: "btn btn-primary" %>
<table class="table" id="operations xs12">
  <thead>
    <tr>
      <th>ID</th>
      <th>Category</th>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @operations.each do |operation| %>
      <%= render operation %>
    <% end %>
  </tbody>
</table>



